%h1 Books
%table
  %thead
    %tr
      %th Title
      %th Body
      %th{:colspan => 3}
  %tbody
    - @books.each do |book|
      %tr
        %td
          = book.title
        %td
          = book.body
        %td
          = link_to 'Show', book_path(book.id)
        %td
          = link_to 'Edit', edit_book_path(book.id)
        %td
          = link_to 'Destroy', book_path(book.id), method: :delete, 'data-confirm' => 'Are you sure?'

%h2 New book
= render partial: 'form', locals: { btn_name: 'Create' }
